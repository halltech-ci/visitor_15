<odoo>
    <data>
        <record model="ir.ui.view" id="parking_mgmnt_form_view">
            <field name="name">Vehicles</field>
            <field name="model">parking.vehicle</field>
            <field name="arch" type="xml">
                <form string="Vehicles">
                    <sheet>
                        <!--<field name="vehicle_image" widget="image" class="oe_avatar" style="margin-right:50px"/>-->
                        <div name="title_name" class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="vehicle_type"/>
                                <field name="mineral_plate"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
