    <menuitem id="parking_mgmnt_main" name="Parking Management" sequence="2"/>
    <menuitem id="vehicle_mgmnt_menu" name="Vehicle Management" parent="parking_mgmnt_main" sequence="1"/>
    <menuitem id="vehicle_menu" name="Vehicle" parent="vehicle_mgmnt_menu" action="vehicle_mgmnt_action" groups="base.group_user" sequence="1"/>
