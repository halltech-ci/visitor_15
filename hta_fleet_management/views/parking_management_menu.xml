    <record model="ir.ui.view" id="vehicle_mgmnt_tree_view">
        <field name="name">vehicle_tree</field>
        <field name="model">parking.vehicle</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string='Vehicles'>
                <field name="name"/>
                <field name="vehicle_type"/>
                <field name="mineral_plate"/>
            </tree>
        </field>
    </record>
      
    <record id="vehicle_mgmnt_action" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">parking.vehicle</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="vehicle_mgmnt_tree_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create New Vehicle.
            </p>
        </field>
